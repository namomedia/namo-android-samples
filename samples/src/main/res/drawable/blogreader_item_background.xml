<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
  <!-- Top border -->
  <item
      android:bottom="1dp"
      android:left="1dp"
      android:right="1dp">
    <shape android:shape="rectangle">

      <corners android:radius="@dimen/bl_clipped_corner_radius" />

      <stroke
          android:width="1dp"
          android:color="#d8d8d8" />

    </shape>
  </item>

  <!-- Side borders -->
  <item
      android:bottom="1dp"
      android:top="1dp">
    <shape android:shape="rectangle">

      <corners android:radius="@dimen/bl_clipped_corner_radius" />

      <stroke
          android:width="1dp"
          android:color="#c0c0c0" />

    </shape>
  </item>

  <!-- Bottom border -->
  <item
      android:left="1dp"
      android:right="1dp"
      android:top="1dp">
    <shape android:shape="rectangle">

      <corners android:radius="@dimen/bl_clipped_corner_radius" />

      <stroke
          android:width="1dp"
          android:color="#a8a8a8" />

    </shape>
  </item>

</layer-list>