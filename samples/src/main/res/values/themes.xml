<?xml version="1.0" encoding="utf-8"?>
<resources>

  <style name="Theme.Demo" parent="@android:style/Theme.Holo.Light">
    <item name="android:listViewStyle">@style/ListViewStyle</item>
  </style>

  <style name="ListViewStyle" parent="@android:style/Widget.Holo.Light.ListView">
    <item name="android:scrollbars">none</item>
    <item name="android:divider">@android:color/transparent</item>
    <item name="android:dividerHeight">0dp</item>
  </style>

  <style name="Theme.BlogReader" parent="Theme.Demo">
    <item name="android:windowActionBar">false</item>
    <item name="android:windowTitleBackgroundStyle">@style/WhiteTitleBar</item>
    <item name="android:windowTitleSize">48dp</item>
  </style>

  <style name="WhiteTitleBar">
    <item name="android:background">#ffffff</item>
  </style>

  <style name="Theme.NoTitleBar" parent="Theme.Demo">
    <item name="android:windowActionBar">false</item>
    <item name="android:windowNoTitle">true</item>
  </style>
</resources>